<% bookCoverClass = locals.large ? 
    "book-cover-large" : "" %>    
<% bookGridClass = locals.large ? 
    "book-grid-large" : "" %>    

<div class="book-grid <%= bookGridClass %>">
    <% books.forEach(book => { %>
            <a class="book-img" href="/books/<%= book.id %>">
                <img class="book-cover <%= bookCoverClass %>" src="<%= book.coverImagePath %>">
            </a>
    <% }) %> 
</div>